# Application
DEBUG=False
APP_NAME=Realtime Chat API
APP_VERSION=1.0.0

# Database
# Update username and password according to your PostgreSQL setup
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatdb
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PUBSUB_CHANNEL=chat:messages

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated list, will be parsed automatically)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS_STR=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Admin
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
